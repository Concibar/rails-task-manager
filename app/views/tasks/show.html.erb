<h1><%= @task["title"] %></h1>

<p><%= @task["details"] %></p>

<p><%= @completed %></p>

<%= link_to "Back to list", "/tasks" %>

<%= link_to "Edit this task", edit_task_path(@task) %>

<%= link_to "Delete this task",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
